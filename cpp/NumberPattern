#include<iostream>
using namespace std;

int main(){
    int n;
    cin>>n;
    int i=1;
    while(i<=n){
        int spaces=1;
        while(spaces<=n-i){
            cout<<" ";
            spaces++;
        }
        int j=1;
        int val1=i;
        while(j<=i){
            cout<<val1;
            val1++;
            j++;
        }
        int k=1;
        int val2=((2*i)-2);
        while(k<i){
            cout<<val2;
            val2--;
            k++;
        }
        cout<<endl;
        i++;
    }
    return 0;
}




//output of the code is-
//Putting n=4(from user)
4
   1
  232
 34543
4567654
